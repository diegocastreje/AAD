<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.diego.temporizador.ControladorCronometro">
   <children>
      <StackPane prefHeight="150.0" prefWidth="200.0">
         <children>
            <Label fx:id="tiempo" prefHeight="60.0" prefWidth="250.0" text="0.00" textAlignment="CENTER">
               <font>
                  <Font size="47.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <HBox prefHeight="0.0" prefWidth="200.0">
         <children>
            <Button fx:id="inicio" onAction="#iniciar" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="Iniciar" />
            <Button onAction="#resetear" mnemonicParsing="false" prefHeight="25.0" prefWidth="100.0" text="Resetear" />
         </children>
      </HBox>
      <Button onAction="#cargarTiempos" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Ver Tiempos" />
   </children>
</VBox>
